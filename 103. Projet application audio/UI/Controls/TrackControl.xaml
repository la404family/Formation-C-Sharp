<UserControl x:Class="AudioEditor.UI.Controls.TrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="TrackButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF505050"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF707070"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF404040"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="#FFFF6B6B"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TrackSliderStyle" TargetType="Slider">
            <Setter Property="Height" Value="15"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="#FF00BFFF"/>
        </Style>
        
        <Style x:Key="ClipRectangleStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="#FF4A90E2"/>
            <Setter Property="Stroke" Value="#FF2171B5"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="RadiusX" Value="2"/>
            <Setter Property="RadiusY" Value="2"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="1"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#FF3E3E42" BorderBrush="#FF555555" BorderThickness="0,0,0,1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Section de contrôle de la piste -->
            <Border Grid.Column="0" Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="0,0,1,0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Nom de la piste -->
                    <TextBox Grid.Row="0" Name="TrackNameTextBox" 
                             Text="Audio Track" 
                             Background="#FF404040" 
                             Foreground="White" 
                             BorderBrush="#FF707070"
                             FontSize="12" 
                             FontWeight="Bold"
                             Margin="0,0,0,5"/>
                    
                    <!-- Boutons Mute/Solo -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <Button Name="MuteButton" 
                                Content="MUTE" 
                                Style="{StaticResource TrackButtonStyle}"
                                Click="MuteButton_Click"/>
                        <Button Name="SoloButton" 
                                Content="SOLO" 
                                Style="{StaticResource TrackButtonStyle}"
                                Click="SoloButton_Click"/>
                    </StackPanel>
                    
                    <!-- Contrôles Volume et Pan -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Volume -->
                        <Label Grid.Row="0" Content="Volume:" Foreground="White" FontSize="10" Padding="0,0,0,2"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>
                            <Slider Name="VolumeSlider" 
                                    Grid.Column="0"
                                    Style="{StaticResource TrackSliderStyle}"
                                    Minimum="0" 
                                    Maximum="1" 
                                    Value="0.8" 
                                    SmallChange="0.01"
                                    LargeChange="0.1"
                                    ValueChanged="VolumeSlider_ValueChanged"/>
                            <Label Name="VolumeLabel" 
                                   Grid.Column="1" 
                                   Content="80%" 
                                   Foreground="White" 
                                   FontSize="9" 
                                   HorizontalAlignment="Right"
                                   Padding="2,0"/>
                        </Grid>
                        
                        <!-- Pan -->
                        <Label Grid.Row="2" Content="Pan:" Foreground="White" FontSize="10" Padding="0,2,0,2"/>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>
                            <Slider Name="PanSlider" 
                                    Grid.Column="0"
                                    Style="{StaticResource TrackSliderStyle}"
                                    Minimum="-1" 
                                    Maximum="1" 
                                    Value="0" 
                                    SmallChange="0.01"
                                    LargeChange="0.1"
                                    ValueChanged="PanSlider_ValueChanged"/>
                            <Label Name="PanLabel" 
                                   Grid.Column="1" 
                                   Content="C" 
                                   Foreground="White" 
                                   FontSize="9" 
                                   HorizontalAlignment="Right"
                                   Padding="2,0"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Zone d'affichage des clips audio -->
            <Border Grid.Column="1" Background="#FF2D2D30">
                <ScrollViewer Name="ClipsScrollViewer" 
                             HorizontalScrollBarVisibility="Auto" 
                             VerticalScrollBarVisibility="Hidden">
                    <Canvas Name="ClipsCanvas" 
                            Background="Transparent"
                            Height="60"
                            MinWidth="400"
                            MouseLeftButtonDown="ClipsCanvas_MouseLeftButtonDown"
                            MouseMove="ClipsCanvas_MouseMove"
                            MouseLeftButtonUp="ClipsCanvas_MouseLeftButtonUp"
                            Drop="ClipsCanvas_Drop"
                            AllowDrop="True">
                        
                        <!-- Grille de temps pour les clips -->
                        <Canvas Name="ClipTimeGridCanvas" Panel.ZIndex="0"/>
                        
                        <!-- Les clips seront ajoutés dynamiquement ici -->
                        
                        <!-- Indicateur de position d'insertion -->
                        <Line Name="InsertPositionIndicator"
                              Stroke="#FFFF6B6B"
                              StrokeThickness="2"
                              Y1="0"
                              Y2="60"
                              Visibility="Collapsed"
                              Panel.ZIndex="10"/>
                    </Canvas>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</UserControl>