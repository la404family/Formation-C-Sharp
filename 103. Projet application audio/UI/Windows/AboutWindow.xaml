<Window x:Class="AudioEditor.UI.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="À propos d'Anomaly Recorder" 
        Height="300" 
        Width="400" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="../../icon.ico"
        Background="#FF2D2D30">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="AuthorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF00BFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>
    
    <Border Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Icône de l'application -->
            <Image Grid.Row="0" 
                   Source="../../icon.ico" 
                   Width="64" 
                   Height="64" 
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
            
            <!-- Nom de l'application -->
            <TextBlock Grid.Row="1" 
                       Text="Anomaly Recorder" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="24"/>
            
            <!-- Version -->
            <TextBlock Grid.Row="2" 
                       Text="Version 0.1" 
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="14"/>
            
            <!-- Description -->
            <TextBlock Grid.Row="3" 
                       Text="Enregistreur et mixage d'Anomalies Audio" 
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="12"
                       Margin="0,10,0,5"/>
            
            <TextBlock Grid.Row="4" 
                       Text="Application de Kevin Du Chevreuil," 
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="11"/>
            
            <TextBlock Grid.Row="5" 
                       Text="pour l'édition et le mixage de fichiers audio" 
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="11"
                       Margin="0,0,0,15"/>
            
            <!-- Auteur -->
            <TextBlock Grid.Row="6" 
                       Text="Développé par Kevin Du Chevreuil" 
                       Style="{StaticResource AuthorTextStyle}"
                       FontSize="14"/>
            
            <!-- Technologies utilisées -->
            <StackPanel Grid.Row="7" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Margin="0,15,0,0">
                <TextBlock Text="Technologies utilisées :" 
                          Style="{StaticResource BodyTextStyle}"
                          FontSize="10"
                          FontWeight="Bold"
                          Margin="0,0,0,5"/>
                <TextBlock Text="• .NET 9.0 / WPF" 
                          Style="{StaticResource BodyTextStyle}"
                          FontSize="10"/>
                <TextBlock Text="• NAudio 2.2.1" 
                          Style="{StaticResource BodyTextStyle}"
                          FontSize="10"/>
                <TextBlock Text="• C# / XAML" 
                          Style="{StaticResource BodyTextStyle}"
                          FontSize="10"/>
            </StackPanel>
            
            <!-- Boutons -->
            <StackPanel Grid.Row="8" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0">
                <Button Name="OkButton" 
                        Content="OK" 
                        Width="80" 
                        Height="30"
                        Background="#FF505050"
                        Foreground="White"
                        BorderBrush="#FF707070"
                        BorderThickness="1"
                        Click="OkButton_Click"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>